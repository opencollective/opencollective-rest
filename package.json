{
  "name": "opencollective-rest",
  "version": "2.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/opencollective-rest.git"
  },
  "private": true,
  "engines": {
    "node": "11.8.0",
    "npm": "6.5.0"
  },
  "dependencies": {
    "cloudflare-ip": "^0.0.7",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^3.1.0",
    "graphql": "^14.3.1",
    "graphql-request": "^1.8.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "winston": "^3.2.1"
  },
  "scripts": {
    "start": "node dist/server",
    "dev": "nodemon --exec babel-node -- src/server",
    "build": "npm run build:clean && npm run build:updates && npm run build:server",
    "build:clean": "rm -rf dist",
    "build:updates": "npm --prefix node_modules/cloudflare-ip run update-list",
    "build:server": "babel --copy-files ./src --out-dir ./dist",
    "test:server": "TZ=UTC ./scripts/run_server_tests.sh",
    "deploy:production": "./scripts/pre-deploy.sh production && git push production master",
    "deploy:staging": "./scripts/pre-deploy.sh staging && git push -f staging master",
    "git:clean": "./scripts/git_clean.sh",
    "lint": "npm run eslint && npm run prettier:check",
    "eslint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint:quiet": "npm run eslint -- --quiet",
    "prettier": "prettier \"src/**/*.js\" \"test/**/*.js\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --list-different",
    "commit": "git-cz",
    "graphql:get-schema": "npx graphql-cli get-schema -p opencollective -e dev && prettier src/graphql/schema.graphql --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.0",
    "eslint-config-opencollective": "^2.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "heroku-run-build-script": true
}
